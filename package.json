{
  "name": "tanulo-next",
  "version": "0.1.0",
  "description": "Közös tanuláshoz partnerkeresést segítő alkalmazás",
  "license": "MIT",
  "scripts": {
    "start": "yarn run serve",
    "build": "yarn run build-sass && yarn run build-ts && yarn run lint && yarn run copy-static-assets",
    "build-prod": "yarn run build-sass && yarn run build-ts && yarn run copy-static-assets",
    "serve": "node dist/server.js",
    "migrate": "knex migrate:latest",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-sass\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass public/css/main-light.scss dist/public/css/main-light.css && node-sass public/css/main-dark.scss dist/public/css/main-dark.css",
    "watch-sass": "concurrently \"node-sass -w public/css/main-light.scss dist/public/css/main-light.css\" \"node-sass -w public/css/main-dark.scss dist/public/css/main-dark.css\"",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-sass\" \"yarn run watch-ts\" \"yarn run serve-debug\""
  },
  "dependencies": {
    "@creativebulma/bulma-tagsinput": "^1.0.2",
    "bulma": "^0.9.0",
    "bulma-calendar": "^6.0.9",
    "bulma-tooltip": "^3.0.2",
    "compression": "^1.7.4",
    "date-fns": "^2.15.0",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.6.1",
    "ics": "^2.22.1",
    "knex": "^0.21.3",
    "lusca": "^1.6.1",
    "markdown-it": "^11.0.0",
    "multer": "^1.4.2",
    "node-fetch": "^2.6.0",
    "objection": "^2.2.2",
    "passport": "^0.4.0",
    "passport-oauth2": "^1.5.0",
    "pg": "^8.3.0",
    "pug": "^3.0.0",
    "sanitize-html": "^1.27.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/concurrently": "^5.2.1",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^7.2.0",
    "@types/express": "^4.17.4",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^26.0.9",
    "@types/lusca": "^1.6.2",
    "@types/markdown-it": "^10.0.2",
    "@types/multer": "^1.4.3",
    "@types/node": "^14.0.27",
    "@types/node-fetch": "^2.5.7",
    "@types/node-sass": "^4.11.1",
    "@types/passport": "^1.0.4",
    "@types/passport-oauth2": "^1.4.9",
    "@types/pug": "^2.0.4",
    "@types/sanitize-html": "^1.23.3",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "concurrently": "^5.3.0",
    "eslint": "^6.4.0",
    "jest": "^25.5.4",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
