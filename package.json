{
  "name": "tanulo-next",
  "version": "0.1.0",
  "description": "Közös tanuláshoz partnerkeresést segítő alkalmazás",
  "license": "MIT",
  "scripts": {
    "start": "yarn serve",
    "build": "yarn build:ts && yarn build:sass && yarn lint && yarn copy-static-assets",
    "build:prod": "yarn build:ts && yarn build:sass && yarn copy-static-assets",
    "serve": "node dist/src/server.js",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "watch:node": "nodemon",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,Static,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch:sass\" \"yarn watch:static-assets\" \"yarn watch:node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch:test": "yarn test --watchAll",
    "build:ts": "etsc",
    "build:sass": "node-sass public/css/main-light.scss dist/public/css/main-light.css && node-sass public/css/main-dark.scss dist/public/css/main-dark.css",
    "watch:sass": "concurrently \"node-sass -w public/css/main-light.scss dist/public/css/main-light.css\" \"node-sass -w public/css/main-dark.scss dist/public/css/main-dark.css\"",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "copy-static-assets": "node -r esm copyStaticAssets.js",
    "watch:static-assets": "chokidar \"views/**/*.pug\" \"public/js/**/*.js\" -c \"yarn copy-static-assets\"",
    "debug": "yarn build && yarn watch:debug",
    "serve:debug": "nodemon --inspect",
    "watch:debug": "concurrently -k -p \"[{name}]\" -n \"Sass,Static,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch:sass\" \"yarn watch:static-assets\" \"yarn serve:debug\""
  },
  "dependencies": {
    "@creativebulma/bulma-tagsinput": "^1.0.3",
    "bulma": "^0.9.0",
    "bulma-calendar": "^6.0.9",
    "bulma-tooltip": "^3.0.2",
    "compression": "^1.7.4",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.6.1",
    "ics": "^2.26.1",
    "knex": "^0.21.12",
    "lusca": "^1.6.1",
    "markdown-it": "^12.0.2",
    "multer": "^1.4.2",
    "node-fetch": "^2.6.1",
    "objection": "^2.2.3",
    "passport": "^0.4.0",
    "passport-oauth2": "^1.5.0",
    "pg": "^8.3.3",
    "pug": "^3.0.0",
    "sanitize-html": "^2.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.4",
    "@types/express-session": "^1.17.0",
    "@types/faker": "^5.1.4",
    "@types/jest": "^26.0.15",
    "@types/lusca": "^1.6.2",
    "@types/markdown-it": "^10.0.3",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.14.9",
    "@types/node-fetch": "^2.5.7",
    "@types/passport": "^1.0.4",
    "@types/passport-oauth2": "^1.4.9",
    "@types/sanitize-html": "^1.27.0",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.3.0",
    "esbuild-node-tsc": "^1.0.4",
    "eslint": "^6.4.0",
    "faker": "^5.1.0",
    "jest": "^25.5.4",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.6",
    "shelljs": "^0.8.4",
    "supertest": "^5.0.0",
    "ts-jest": "^25.5.1",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7"
  }
}
