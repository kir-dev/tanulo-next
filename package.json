{
  "name": "tanulo-next",
  "version": "0.1.0",
  "description": "Közös tanuláshoz partnerkeresést segítő alkalmazás",
  "license": "MIT",
  "scripts": {
    "start": "yarn run serve",
    "build": "yarn run build-sass && yarn run build-ts && yarn run lint && yarn run copy-static-assets",
    "serve": "node dist/server.js",
    "migrate": "knex migrate:latest",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-sass\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w public/css/main.scss dist/public/css/main.css",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-sass\" \"yarn run watch-ts\" \"yarn run serve-debug\""
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "bulma": "^0.8.2",
    "compression": "^1.7.4",
    "date-fns": "^2.12.0",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.4.0",
    "knex": "^0.20.15",
    "lusca": "^1.6.1",
    "multer": "^1.4.2",
    "node-fetch": "^2.6.0",
    "objection": "^2.1.3",
    "passport": "^0.4.0",
    "passport-oauth2": "^1.5.0",
    "pg": "^8.0.2",
    "pug": "^2.0.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/concurrently": "^5.1.0",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.4",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^25.2.1",
    "@types/lusca": "^1.6.1",
    "@types/multer": "^1.4.3",
    "@types/node": "^13.13.2",
    "@types/node-fetch": "^2.5.7",
    "@types/node-sass": "^4.11.0",
    "@types/passport": "^1.0.3",
    "@types/passport-oauth2": "^1.4.9",
    "@types/pug": "^2.0.4",
    "@types/shelljs": "^0.8.7",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.4.0",
    "jest": "^25.4.0",
    "node-sass": "^4.14.0",
    "nodemon": "^2.0.3",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  }
}
