extends ../layouts/main

block content
  - const dateOptions = { hour: 'numeric', minute: 'numeric' }
  h1.title Csoportok
  a.button.is-link(href="/groups/new") Ãšj csoport
  .cards
    each group in groups
      .card
        a(href=`/groups/${group.id}`)
          .card-header
            h3.subtitle.card-header-title= group.name
        .card-content
          .content
            p= group.subject
            p= group.description
            p= group.room
            p= group.doNotDisturb
        footer.card-footer
          .card-footer-item
            = group.startDate.toLocaleDateString('hu', dateOptions)
          .card-footer-item
            = group.endDate.toLocaleDateString('hu', dateOptions)
